<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragmentTitle">

    <fragment
        android:id="@+id/fragmentTitle"
        android:name="com.example.android.navigation.TitleFragment"
        android:label="@string/android_trivia"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_fragmentTitle_to_fragmentGame"
            app:destination="@id/fragmentGame" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGame"
        android:name="com.example.android.navigation.GameFragment"
        android:label="@string/title_android_trivia_question"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_fragmentGame_to_fragmentGameOver"
            app:destination="@id/fragmentGameOver"
            app:popUpTo="@id/fragmentGame"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragmentGame_to_fragmentGameWon"
            app:destination="@id/fragmentGameWon"
            app:popUpTo="@id/fragmentGame"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGameOver"
        android:name="com.example.android.navigation.GameOverFragment"
        android:label="@string/game_over"
        tools:layout="@layout/fragment_game_over">
        <action
            android:id="@+id/action_fragmentGameOver_to_fragmentGame"
            app:destination="@id/fragmentGame"
            app:popUpTo="@id/fragmentTitle" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGameWon"
        android:name="com.example.android.navigation.GameWonFragment"
        android:label="@string/congratulations"
        tools:layout="@layout/fragment_game_won">
        <action
            android:id="@+id/action_fragmentGameWon_to_fragmentGame"
            app:destination="@id/fragmentGame"
            app:popUpTo="@id/fragmentTitle" />
        <argument
            android:name="numQuestions"
            app:argType="integer" />
        <argument
            android:name="numCorrect"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAbout"
        android:name="com.example.android.navigation.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
</navigation>