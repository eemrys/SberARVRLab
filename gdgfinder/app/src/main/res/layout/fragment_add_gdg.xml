<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".add.AddGdgFragment">

        <TextView
            android:id="@+id/txtvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_gdg"
            android:contentDescription="@string/add_gdg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/spacing_normal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_normal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/spacing_normal"/>

        <ImageView
            android:id="@+id/imgvTop"
            android:layout_width="411dp"
            android:layout_height="230dp"
            tools:src="@tools:sample/avatars"
            app:srcCompat="@drawable/behind"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@+id/txtvIntro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/eTxtName"
            android:scaleType="centerCrop"
            android:contentDescription="@string/stage_image_description" />

        <EditText
            android:id="@+id/eTxtName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/eTxtEmail"
            android:hint="@string/your_name_label"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/eTxtEmail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/eTxtName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/eTxtCity"
            android:hint="@string/email_label"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/eTxtCity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/eTxtEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/eTxtCountry"
            android:layout_marginBottom="4dp"
            android:hint="@string/city_label"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/eTxtCountry"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/eTxtCity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/eTxtRegion"
            android:layout_marginTop="4dp"
            android:hint="@string/country_label"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/eTxtRegion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/eTxtCountry"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/contentGroup"
            android:hint="@string/region_label"
            android:singleLine="true"/>

        <LinearLayout
            android:id="@+id/contentGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/eTxtRegion"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/eTxtRegion"
            app:layout_constraintEnd_toEndOf="@+id/eTxtRegion"
            android:layout_marginTop="@dimen/spacing_normal"
            app:layout_constraintBottom_toTopOf="@+id/btnOk"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtvWhyLabel"
                android:text="@string/motivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/motivation"
                app:layout_constraintTop_toBottomOf="@+id/eTxtRegion"
                app:layout_constraintBottom_toTopOf="@+id/eTxtWhy"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/eTxtWhy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="@string/enter_motivation"
                app:layout_constraintTop_toBottomOf="@+id/eTxtRegion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btnOk"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnOk"
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityLiveRegion="polite"
            android:contentDescription="@string/submit_button_description"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentGroup"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
