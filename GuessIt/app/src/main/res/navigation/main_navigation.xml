<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentTitle">

    <fragment
        android:id="@+id/fragmentTitle"
        android:name="com.example.android.guesstheword.screens.title.TitleFragment"
        android:label="title_fragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/actionTitleToGame"
            app:destination="@id/fragmentGame"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGame"
        android:name="com.example.android.guesstheword.screens.game.GameFragment"
        android:label="game_fragment"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/actionGameToScore"
            app:destination="@id/fragmentScore"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/fragmentTitle" />
    </fragment>
    <fragment
        android:id="@+id/fragmentScore"
        android:name="com.example.android.guesstheword.screens.score.ScoreFragment"
        android:label="score_fragment"
        tools:layout="@layout/fragment_score">
        <action
            android:id="@+id/actionRestart"
            app:destination="@id/fragmentGame"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/fragmentTitle" />
        <argument
            android:name="score"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>